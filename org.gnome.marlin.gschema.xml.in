<schemalist>
  <enum id="viewmode">
    <value nick="icon" value="0"/>
    <value nick="list" value="1"/>
    <value nick="miller_columns" value="2"/>
  </enum>
  <enum id="org.gnome.marlin.ZoomLevel">
    <value nick="smallest" value="0"/>
    <value nick="smaller" value="1"/>
    <value nick="small" value="2"/>
    <value nick="normal" value="3"/>
    <value nick="large" value="4"/>
    <value nick="larger" value="5"/>
    <value nick="largest" value="6"/>
  </enum>

  <schema id="org.gnome.marlin.preferences" path="/apps/marlin/preferences/">
    <key name="show-menubar" type="b">
      <default>true</default>
      <_summary>Show the menubar</_summary>
      <_description>
        Show the menubar
      </_description>
    </key>
    <key name="show-sidebar" type="b">
      <default>true</default>
      <_summary>Show the sidebar</_summary>
      <_description>
        Show the sidebar
      </_description>
    </key>
    <key name="show-hiddenfiles" type="b">
      <default>false</default>
      <_summary>Show hidden files</_summary>
      <_description>
        If set to true, hidden files will also be shown (files starting with a "." for example)
      </_description>
    </key>
    <key name="start-with-contextview" type="b">
      <default>true</default>
      <_summary>Show the context view pane</_summary>
      <_description>
        Show the context view pane
      </_description>
    </key>
    <key name="rgba-colormap" type="b">
      <default>false</default>
      <_summary>enable rgba window</_summary>
      <_description>
        If set to true, rgba will be enabled, you'll need a gtk engine supporting rgba, like murrine. Compiz can have some problems like drawings shadows ... 
      </_description>
    </key>
    <key name="date-format" type="s">
      <default>'iso'</default>
      <_summary>Date Format</_summary>
      <_description>
        The format of file dates. Possible values are "locale", "iso", and "informal".
      </_description>
    </key>
    <key name="single-click" type="b">
      <default>true</default>
      <_summary>single click</_summary>
      <_description>
        Whether items are activated by single clicks instead of dubble clicks
      </_description>
    </key>
    <key name="single-click-timeout" type="i">
      <default>290</default>
      <range min="0" max="1000" />
      <summary>single click timeout</summary>
      <description>
        The amount of time which the item under the mouse cursor will be selected automatically in single click mode. A value of 0 disables the automatic selection.
      </description>
    </key>
    <key name="default-viewmode" enum="viewmode">
      <default>'list'</default>
      <summary>Default viewmode when browsing</summary>
      <description>
        The default viewmode to be used when opening a new tab or window
      </description>
    </key>
    <key name="toolbar-items" type="as">
      <default>[ 'Back', 'Forward', 'Up', 'LocationEntry', 'ViewSwitcher']</default>
      <summary>List of actions present in the toolbar</summary>
      <description>
        List of actions present in the toolbar
      </description>
    </key>
    <key name="sidebar-icon-size" type="i">
      <default>16</default>
      <summary>Size of the icons in the Places sidebar</summary>
      <description>
        If set to a null or negative value, the default GTK_ICON_SIZE_MENU would be used.
      </description>
    </key>
    <key name="sidebar-cat-personal-expander" type="b">
      <default>true</default>
      <_summary>Categorie personal expander</_summary>
      <_description>
        Expand/Collapse categorie Personal
      </_description>
    </key>
    <key name="sidebar-cat-devices-expander" type="b">
      <default>true</default>
      <_summary>Categorie Devices expander</_summary>
      <_description>
        Expand/Collapse categorie Devices
      </_description>
    </key>
    <key name="sidebar-cat-network-expander" type="b">
      <default>true</default>
      <_summary>Categorie Network expander</_summary>
      <_description>
        Expand/Collapse categorie Network
      </_description>
    </key>
    <key name="geometry" type="s">
      <default>''</default>
      <_summary>The geometry string for a navigation window.</_summary>
      <_description>A string containing the saved geometry and coordinates string for navigation windows.</_description>
    </key>
    <key name="maximized" type="b">
      <default>false</default>
      <_summary>Whether the navigation window should be maximized.</_summary>
      <_description>Whether the navigation window should be maximized by default.</_description>
    </key>
    <key name="sidebar-width" type="i">
      <default>148</default>
      <_summary>Width of the side pane</_summary>
      <_description>The default width of the side pane in new windows.</_description>
    </key>
    <key name="confirm-trash" type="b">
      <default>true</default>
      <_summary>Confirm trash</_summary>
      <_description>
        Confirm trash
      </_description>
    </key>
  </schema>

  <schema id="org.gnome.marlin.icon-view" path="/apps/marlin/icon-view/">
    <key name="default-zoom-level" enum="org.gnome.marlin.ZoomLevel">
      <default>'normal'</default>
      <_summary>icon default zoom level</_summary>
      <_description>Default Zoom level used by the icon view.</_description>
    </key>
    <key name="zoom-level" enum="org.gnome.marlin.ZoomLevel">
      <default>'normal'</default>
      <_summary>icon zoom level</_summary>
      <_description>Zoom level used by the icon view.</_description>
    </key>
  </schema>

</schemalist>
