<schemalist>
  <enum id="viewmode">
    <value nick="list" value="0"/>
    <value nick="miller_columns" value="1"/>
  </enum>

  <schema id="org.gnome.marlin.preferences" path="/apps/marlin/preferences/">
    <key name="show-menubar" type="b">
      <default>true</default>
      <_summary>Show the menubar</_summary>
      <_description>
        Show the menubar
      </_description>
    </key>
    <key name="show-sidebar" type="b">
      <default>true</default>
      <_summary>Show the sidebar</_summary>
      <_description>
        Show the sidebar
      </_description>
    </key>
    <key name="show-hiddenfiles" type="b">
      <default>false</default>
      <_summary>Show hidden files</_summary>
      <_description>
        If set to true, hidden files will also be shown (files starting with a "." for example)
      </_description>
    </key>
    <key name="rgba-colormap" type="b">
      <default>false</default>
      <_summary>enable rgba window</_summary>
      <_description>
        If set to true, rgba will be enabled, you'll need a gtk engine supporting rgba, like murrine. Compiz can have some problems like drawings shadows ... 
      </_description>
    </key>
    <key name="date-format" type="s">
      <default>'iso'</default>
      <_summary>Date Format</_summary>
      <_description>
        The format of file dates. Possible values are "locale", "iso", and "informal".
      </_description>
    </key>
    <key name="single-click" type="b">
      <default>true</default>
      <_summary>single click</_summary>
      <_description>
        Whether items are activated by single clicks instead of dubble clicks
      </_description>
    </key>
    <key name="single-click-timeout" type="i">
      <default>320</default>
      <range min="50" max="1000" />
      <summary>single click timeout</summary>
      <description>
        The amount of time which the item under the mouse cursor will be selected automatically in single click mode
      </description>
    </key>
    <key name="default-viewmode" enum="viewmode">
      <default>'list'</default>
      <summary>Default viewmode when browsing</summary>
      <description>
        The default viewmode to be used when opening a new tab or window
      </description>
    </key>
    <key name="toolbar-items" type="as">
      <default>[ 'Back', 'Forward', 'Up', 'LocationEntry', 'ViewSwitcher']</default>
      <summary>List of actions present in the toolbar</summary>
      <description>
        List of actions present in the toolbar
      </description>
    </key>
  </schema>
</schemalist>
